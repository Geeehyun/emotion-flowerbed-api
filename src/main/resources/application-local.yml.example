# Local Development Configuration Template
# 이 파일을 복사하여 application-local.yml 파일을 생성하고 실제 값을 입력하세요.
# cp application-local.yml.example application-local.yml

spring:
  datasource:
    driver-class-name: org.mariadb.jdbc.Driver
    url: jdbc:mariadb://localhost:3306/flowerbed?serverTimezone=Asia/Seoul&characterEncoding=UTF-8
    username: 'flowerbed-api'  # MariaDB 사용자명
    password: your_password_here  # MariaDB 비밀번호

# CORS Configuration (로컬 개발 환경)
cors:
  allowed-origins: http://localhost:3000,http://localhost:8080  # 프론트엔드 URL 추가 가능

# Claude API Configuration
anthropic:
  api:
    key: sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx  # Anthropic API Key (https://console.anthropic.com/)
    model: claude-3-5-haiku-20241022  # Haiku 모델 (Sonnet보다 20배 저렴!)
    max-tokens: 500  # 2000 → 500으로 축소
    temperature: 0.3  # 더 일관된 응답
